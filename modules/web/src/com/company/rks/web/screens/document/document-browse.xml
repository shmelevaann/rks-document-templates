<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://documentBrowse.caption"
        focusComponent="documentsTable"
        messagesPack="com.company.rks.web.screens.document">
    <data readOnly="true">
        <collection id="documentsDc"
                    class="com.company.rks.entity.Document">
            <view extends="_local">
                <property name="documentTemplate" view="_minimal">
                    <property name="name"/>
                </property>
            </view>
            <loader id="documentsDl">
                <query>
                    <![CDATA[select e from rks_Document e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="documentsTable"
            spacing="true">
        <filter id="filter"
                applyTo="documentsTable"
                dataLoader="documentsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="documentsTable"
                    width="100%"
                    dataContainer="documentsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="documentTemplate"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="documentsTable.create"/>
                <button id="editBtn" action="documentsTable.edit"/>
                <button id="removeBtn" action="documentsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
